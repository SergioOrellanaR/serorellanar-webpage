<section class="site-section" id="section-platforms">
    {{#if usedTechnologies}}
    <div class="row">
        <div class="section-heading text-center col-md-12">
            <h2>for its development <strong>it was used</strong></h2>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {{#each usedTechnologies}}
            <div class="col-sm col-sm text-center mb-5">
                <span class="icon">
                    <span><img src={{this.icon}} /></span>
                </span>
                <h6 class="mb-6">{{this.name}}</h6>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}

    {{#if platforms}}
    <br>
    <div class="section-heading text-center col-md-12">
        <h2>It <strong>runs on</strong></h2>
    </div>
    <div class="container">
        <div class="row">
            {{#each platforms}}
            <div class="col-sm col-sm text-center mb-5">
                <span class="icon">
                    <span><img src={{this.icon}} /></span>
                </span>
                <h6 class="mb-6">{{this.name}}</h6>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}

    {{#if downloadServices}}
    <br>
    <div class="section-heading text-center col-md-12">
        <h2>Available <strong>on</strong></h2>
        <h5><i>Click on icon to download it</i>
            <h5>
    </div>
    <div class="container">
        <div class="row">
            {{#each downloadServices}}
            <div class="col-sm col-sm text-center mb-5">
                <span class="icon">
                    <a href={{this.url}}><span><img src={{this.icon}} /></span></a>
                </span>
                <h6 class="mb-6">{{this.name}}</h6>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
</section>